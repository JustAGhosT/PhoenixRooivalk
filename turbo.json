{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "typecheck", "lint"],
      "outputs": ["dist/**", "build/**", ".next/**", "out/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": [],
      "inputs": ["**/*.{js,jsx,ts,tsx,json,md,mdx}", ".eslintrc.*", "eslint.config.*"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": [],
      "inputs": ["**/*.{ts,tsx}", "tsconfig*.json"]
    },
    "format": {
      "outputs": [],
      "inputs": ["**/*.{js,jsx,ts,tsx,json,md,mdx,css}", ".prettierrc*", "prettier.config.*"]
    },
    "format:check": {
      "outputs": [],
      "inputs": ["**/*.{js,jsx,ts,tsx,json,md,mdx,css}", ".prettierrc*", "prettier.config.*"]
    }
  }
}
